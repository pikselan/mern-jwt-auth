{
  "name": "mern-jwt-auth",
  "version": "1.0.0",
  "description": "Build MERN stack with JWT for authentication",
  "main": "index.js",
  "scripts": {
    "setfrontend": "cd frontend && npm install",
    "setbackend": "cd backend && npm install",
    "setup": "concurrently \"npm install\" \"npm run setfrontend\" \"npm run setbackend\"",
    "frontend": "cd frontend && npm run start",
    "backend": "cd backend && npm run server",
    "start": "concurrently \"npm run frontend\" \"npm run backend\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pikselan/mern-jwt-auth.git"
  },
